<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <%= render 'shared/notices' %>

    <% if ["registrations", "sessions"].include?(controller_name) %>
      <div class="container">
        <%= yield %>
      </div>
    <%else%>
      <div class="container-fluid">
        <div class="row">
          <div id="chat-nav" class="col-12 col-md-3 collapse show chat-sidebar pt-md-4">
            <%= render 'shared/sidebar' %>
          </div>
          <div class="col-12 col-md-9 pt-md-4 border-left">
            <%= yield %>
          </div>
        </div>
      </div>
    <% end %>
  </body>
</html>
